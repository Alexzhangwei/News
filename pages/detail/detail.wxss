.title{
  margin: 10px;
  font-size: 25px;
  font-weight: bold;
}
.desc{
  margin: 10px;
  display: flex;
  flex-direction: row;
}
.publish{
  display: flex;
  flex-direction: row;
  width: 90%;
}
.company{
  margin-left: 10px;
}
.mark{
  border: 1px solid #cccccc;
  width: 25px;
  font-size: 11px;
  border-radius: 5px;
}
.time{
  font-size: 14px;
  margin-left: 5px;
  color: #999999;
}
.btn{
  line-height: 60px;
}
.article{
font-size: 16px;
line-height: 25px;
padding: 10px;
}
.comment{
  width: 100%;
  height: 42px;
  background-color: #F4F5F7;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;

}
.write{
  width: 50%;
  border: 1px solid #ffffff;
  margin-left: 10px;
  border-radius: 15px;
  font-size: 13px;
  background-color: #ffffff;
}
.write input{
  margin-left: 10px;
}
.opr image{
  margin-left: 20px;
}